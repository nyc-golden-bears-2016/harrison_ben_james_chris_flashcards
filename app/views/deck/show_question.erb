<% if session[:answer_status] %>
  <p><%= session[:answer_status] %></p>
<% session[:answer_status] = nil; end %>
<p>Question</p>
<p><%= @card.question %> </p>
<p>Answer</p>
<form action="/check_answer/<%= @card.id %>" method="post">
  <input type="text" name="answer" value="">
  <input type="hidden" name="_method" value="put">
  <input type="submit" value="submit">
</form>
